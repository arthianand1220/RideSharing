<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ride Sharing</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ride Sharing", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li class="@(Request.Url.AbsoluteUri.Contains("Home") ? "active" : "")"><a href="~/Home">Home</a></li>
                    <li class="@(Request.Url.AbsoluteUri.Contains("ProcessData") ? "active" : "")"><a href="~/ProcessData">Process Data</a></li>
                    <li class="@(Request.Url.AbsoluteUri.Contains("Visualizations") ? "active" : "")"><a href="~/Visualizations">Visualizations</a></li>
                    <li class="@(Request.Url.AbsoluteUri.Contains("API") ? "active" : "")"><a href="~/API">API</a></li>
                    <li class="@(Request.Url.AbsoluteUri.Contains("Team") ? "active" : "")"><a href="~/Team">Team</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ride Sharing</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>